<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="8dp"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/royal_purple"
        android:padding="24dp">

        <ImageView
            android:id="@+id/favIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/fav"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <ImageView
            android:id="@+id/shareIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/send"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/favIcon" />
        <TextView
            android:id="@+id/quoteText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="“Be yourself; everyone else is already taken.”"
            android:textSize="24sp"
            android:textColor="@color/lavender"
            android:textStyle="italic"
            android:gravity="center"
            android:lineSpacingExtra="6dp"
            app:layout_constraintTop_toBottomOf="@id/favIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/quoteAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Oscar Wilde"
            android:textSize="16sp"
            android:textColor="@color/lavender_light"
            app:layout_constraintTop_toBottomOf="@id/quoteText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
